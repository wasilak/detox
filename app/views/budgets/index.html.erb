<% title "Budgets" %>

<div class="buttonNew">
  <%= link_to '<i class="icon-pencil"></i> '.html_safe+(I18n.t 'new budget'), new_budget_path, :title => 'new', :class => 'btn btn-small' %>
</div>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th><%= I18n.t 'id' %></th>
            <th></th>
            <th><%= I18n.t 'description' %></th>
            <th><%= I18n.t 'amount' %></th>
            <th><%= I18n.t 'start' %></th>
            <th><%= I18n.t 'end' %></th>
            <th></th>
        </tr>
    </thead>
    <% n=0
    @budgets.each do |b| %>
    <% n +=1 %>
        <tr>
            <td><%= n %></td>
            <td>
                <% if session[:budget][:id] == b.id %>
                    <i class="icon-asterisk" title="<%= I18n.t 'active budget' %>"></i>
                <% end %>
            </td>
            <td><%= link_to b.description, edit_budget_path(b) %></td>
            <td class="amount"><%= number_to_currency b.amount %></td>
            <td><%= b.dateStart %></td>
            <td><%= b.dateEnd %></td>
            <td><%= link_to '<i class="icon-edit"></i>'.html_safe, edit_budget_path(b), :title => (I18n.t 'edit') %>
                <%= link_to '<i class="icon-trash"></i>'.html_safe, b, method: :delete, data: { confirm: (I18n.t 'Are you sure?') }, :title => (I18n.t 'delete') %>
            </td>
        </tr>
    <% end %>
</table>
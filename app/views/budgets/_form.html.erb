<%= form_for(@budget) do |f| %>
  <% if @budget.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@budget.errors.count, "error") %> prohibited this budget from being saved:</h5>

      <ul>
      <% @budget.errors.full_messages.each do |msg| %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= content_tag(:div, msg) %>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :userId, {:value => current_user[:id]} %>
  <div class="field">
    <%= f.label :description, (I18n.t 'budget') %>
    <%= f.text_field :description, :placeholder => (I18n.t "budget description"), :class => 'input-xxlarge' %>
  </div>
  <div class="field input-append">
    <%= f.label :amount, (I18n.t 'value') %>
    <%= f.text_field :amount, :placeholder => (I18n.t"budget value"), :class => 'input-large' %>
    <span class="add-on">zł</span>
  </div>
  <div class="field">
    <%= f.label :dateStart, (I18n.t 'start date') %>
    <%= f.text_field :dateStart, :placeholder => (I18n.t "start date"), :class => 'input-small datepicker' %>
  </div>
  <div class="field">
    <%= f.label :dateEnd, (I18n.t 'end date') %>
    <%= f.text_field :dateEnd, :placeholder => (I18n.t "end date"), :class => 'input-small datepicker' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-small' %>
  </div>
<% end %>

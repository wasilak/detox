<%= form_for(@budget) do |f| %>
  <% if @budget.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@budget.errors.count, "error") %> prohibited this budget from being saved:</h5>

      <ul>
      <% @budget.errors.full_messages.each do |msg| %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= content_tag(:div, msg) %>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :userId, {:value => session[:user][:id]} %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, :placeholder => "budget description", :class => 'input-xxlarge' %>
  </div>
  <div class="field input-append">
    <%= f.label :amount %>
    <%= f.text_field :amount, :placeholder => "budget amount", :class => 'input-large' %>
    <span class="add-on">zł</span>
  </div>
  <div class="field">
    <%= f.label 'Start date' %>
    <%= f.text_field :dateStart, :placeholder => "budget date", :class => 'input-small datepicker' %>
  </div>
  <div class="field">
    <%= f.label 'End date' %>
    <%= f.text_field :dateEnd, :placeholder => "budget date", :class => 'input-small datepicker' %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-small' %>
  </div>
<% end %>

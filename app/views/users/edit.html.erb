<script type="text/javascript">
jQuery(document).ready(function(){

	jQuery('#pass').append(
		'<input type="checkbox" id="enable_password" value="1">'
		);
	jQuery('#enable_password').change(function(){
		var checked = jQuery('#enable_password').is(':checked')

		if (checked) {
			jQuery('#user_password').removeAttr('disabled')
		} else {
			jQuery('#user_password').attr('disabled', 'disabled')
		}
	});
});

</script>

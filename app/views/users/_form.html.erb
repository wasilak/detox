<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field" id="pass">
    <%= f.label :password %>
    <%= f.password_field :password, :disabled => 'disabled' %>
  </div>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.select(:type_id,
          [["select...",""]] +
          Type.find(:all).collect {
            |d| [d.typeName, d.id]
          }
          ) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

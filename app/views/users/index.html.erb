<% title "Users" %>
<div class="buttonNew">
  <%= link_to '<i class="icon-pencil"></i> new user'.html_safe, new_user_path, :title => 'new', :class => 'btn btn-small' %>
</div>
<br />
<br />

<table class="table table-striped table-hover table-condensed">
  <tr>
    <thead>
      <th>No.</th>
      <th>Username</th>
      <th>Name</th>
      <th>Usertype</th>
      <th></th>
    </thead>
  </tr>
<%
n = 0
@users.each do |user|
  n += 1
  %>
  <tr>
    <td><%= n %></td>
    <td><%= link_to user.username, user %></td>
    <td><%= user.name %></td>
    <td><%= user.type.typeName %></td>
    <td>
      <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_user_path(user), :title => 'edit' %>
      <%= link_to '<i class="icon-trash"></i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' }, :title => 'delete' %>
    </td>
  </tr>
<% end %>
</table>


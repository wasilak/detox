<!DOCTYPE html>
<html>
<head>
  <title><%= APP_CONFIG['app_name'] %> : <%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>

  <style type="text/css">
    div.container {
      margin-top: 40px;
    }
    div.centered {
      margin-left: auto;
      margin-right: auto;
      float: none;
    }
  </style>
</head>
<body>
    <% if ERRBIT_CONFIG['js_notifier'] %>
      <%= airbrake_javascript_notifier %>
    <% end %>
    <div class="container" style="background:none;">
        <div class="row">
            <div class="col-lg-6 centered">
                <% flash.each do |severity, message| %>
                    <div class="alert alert-warning">
                        <button type="button" class="close" data-dismiss="alert">Ã—</button>
                        <%= content_tag(:div, message) %>
                    </div>
                <% end %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 centered">
                <div class="well" style="background:#fff">
                    <%= yield %>
                </div>
            </div>
        </div>
  </div>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "locales/jquery.validationEngine-#{I18n.locale}.js" %>
  <script type="text/javascript">
    jQuery(document).ready(function(){
      jQuery('.validate').validationEngine();
    });
  </script>
</body>
</html>

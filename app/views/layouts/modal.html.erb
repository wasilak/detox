<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title"><%= I18n.t 'new expense' %></h4>
      </div>
      <div class="modal-body">
        <!DOCTYPE html>
        <html>
        <head>
          <%= stylesheet_link_tag    "application", :media => "all" %>
          <%# javascript_include_tag "application" %>
          <%= csrf_meta_tags %>
          <% if I18n.locale.to_s != 'en' %>
            <%= javascript_include_tag "locales/bootstrap-datepicker.#{I18n.locale}.js" %>
          <% end %>
          <%= javascript_include_tag "locales/jquery.validationEngine-#{I18n.locale}.js" %>

        </head>
        <body>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                            <%= yield %>
                    </div>
                </div>
          </div>
          <script type="text/javascript">
              $(document).ready( function(){
                var modalWindow = '.modal-body ';

                  $(modalWindow + '.datepicker').datepicker({
                      'format'  : 'yyyy-mm-dd',
                      'weekStart' : 1,
                      'autoclose' : true,
                      'todayHighlight': true,
                      'language': '<%= I18n.locale %>'
                    });

                  $(modalWindow + '.validate').validationEngine();

                  $(modalWindow + 'select').select2({
                      placeholder: '',
                      containerCssClass: 'col-lg-12',
                      allowClear: true,
                      minimumResultsForSearch: 10
                  });
              });
          </script>
        </body>
        </html>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

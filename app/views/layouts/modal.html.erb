
<div class="container modal-body white-popup">
  <div class="row">
      <div class="col-lg-12">
              <%= yield %>
      </div>
  </div>
</div>
<script type="text/javascript">
    $(document).ready( function(){
      var modalWindow = '.modal-body ';

        $(modalWindow + '.datepicker').datepicker({
            'format'  : 'yyyy-mm-dd',
            'weekStart' : 1,
            'autoclose' : true,
            'todayHighlight': true,
            'language': '<%= I18n.locale %>'
          });

        $(modalWindow + '.validate').validationEngine();

        $(modalWindow + 'select').select2({
            placeholder: '',
            containerCssClass: 'col-lg-12',
            allowClear: true,
            minimumResultsForSearch: 10
        });
    });
</script>

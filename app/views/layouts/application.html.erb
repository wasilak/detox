<!DOCTYPE html>
<html>
<head>
  <title><%= APP_CONFIG['app_name'] %> : <%= yield :title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "locales/bootstrap-datepicker.#{I18n.locale}.js" %>
  <%= javascript_include_tag "locales/jquery.validationEngine-#{I18n.locale}.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if ERRBIT_CONFIG['js_notifier'] %>
      <%= airbrake_javascript_notifier %>
    <% end %>
  <div class="container-fluid">
    <% if user_signed_in? %>
      <div class="row-fluid">
        <div class="offset1 span10">
          <div class="navbar">
            <div class="navbar-inner">
              <div class="container">
               
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/"><%= APP_CONFIG['app_name'] %></a>
                 
                <div class="nav-collapse collapse">
                  <ul class="nav">
                    <li>
                      <%= link_to expenses_path do %>
                        <i class="icon-shopping-cart"></i> <%= (I18n.t 'expenses') %>
                      <% end %> 
                    </li>
                    <li>
                      <%= link_to budgets_path do %>
                        <i class="icon-list-alt"></i> <%= (I18n.t 'budgets') %>
                      <% end %>
                    </li>
                    <li>
                      <%= link_to tags_path do %>
                        <i class="icon-tags"></i> <%= (I18n.t 'tags') %>
                      <% end %> 
                    </li>
                    <% if session && current_user[:type_id] == 2 %>
                      <li> 
                        <%= link_to users_path do %>
                          <i class="icon-user"></i> <%= (I18n.t 'users') %> 
                        <% end %>
                      </li>
                    <% end %>
                    <li>
                      <%= link_to destroy_user_session_path, :method => :delete do %>
                        <i class="icon-off"></i> <%= (I18n.t'log out') %>
                      <% end %>
                    </li>
                  </ul>
                </div>
                <div class="pull-right">
                  <%= link_to '<i class="icon-pencil icon-white"></i> '.html_safe+(I18n.t 'new expense'), new_expense_path, :class => 'btn btn-small btn-info' %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% if user_signed_in? %>
    <div class="row-fluid">
        <div class="offset1 span10">
          <div class="alert alert-info">
            <div id="moneyLeft">
              <% if @remaining_budget and session[:budget][:id] != 0 %>
                  <%= I18n.t 'remaining in budget' %> <b>"<%= session[:budget][:description] %>"</b>: <span class="
                  <% if @remaining_budget_percentage < 10 %>
                  belowBudget
                  <% else %>
                  overBudget
                  <% end %>
                  "><%= number_to_currency @remaining_budget %>
                </span> (<%= number_to_currency @budget_left_per_day %>/<%= I18n.t 'day' %><span class="ttip" title="<%= @days_left_in_budget %> <%= I18n.t 'days' %> x <%= number_to_currency @budget_left_per_day %> = <%= number_to_currency (@budget_left_per_day * @days_left_in_budget) %>"><i class="icon-question-sign"></i></span>)
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <div class="row-fluid">
        <div class="offset1 span10">
          <% if flash.count > 0 %>
            <div class="row-fluid">
              <div class="span12">
                <% flash.each do |severity, message| %>
                  <div class="alert">
                    <button type="button" class="close" data-dismiss="alert">Ã—</button>
                    <%= content_tag(:div, message) %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="row-fluid">
            <div class="span12">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
      <% if user_signed_in? && current_user[:type_id] == 2 %>
      <hr />
        <div class="row-fluid">
          <div class="offset1 span10">
            Rails version: <%= Rails::VERSION::STRING %><br />
            Ruby version: <%= RUBY_VERSION %>
          </div>
        </div>
      <% end %>
  </div>
  <script type="text/javascript">
  	jQuery(document).ready(function(){
  		jQuery('table i').tooltip();
      jQuery('table a').tooltip();
      jQuery('p a').tooltip();
      jQuery('.ttip').tooltip({'placement': 'bottom'});
      jQuery('.datepicker').datepicker({
        'format'  : 'yyyy-mm-dd',
        'weekStart' : 1,
        'autoclose' : true,
        'todayHighlight': true,
        'language': '<%= I18n.locale %>'
      });

  		jQuery('select').select2({
    placeholder: '',
    containerCssClass: 'span12',
    allowClear: true,
    minimumResultsForSearch: 10
});

      jQuery('.validate').validationEngine();
  	});
  </script>
</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>Detox</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="row">
		<div class="grid_2">
			<ul>
			<li><%= link_to 'Home', '/' %></li>
			<% if @loggedIn %>
				<li><%= link_to 'Expenses', expenses_path %></li>
				<li><%= link_to 'Tags', tags_path %></li>
				<li><%= link_to 'Log out', logout_url %></li>
			<% end %>
			</ul>
		</div>
		<div class="grid_10">
			<%= yield %>
		</div>
	</div>
</body>
</html>

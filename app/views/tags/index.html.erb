<% title "Tags" %>
<div class="buttonNew">
  <%= link_to '<i class="icon-pencil"></i> '.html_safe+(I18n.t 'new tag'), new_tag_path, :class => 'btn btn-small' %>
</div>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th><%= I18n.t 'id' %></th>
      <th></th>
      <th><%= I18n.t 'name' %></th>
      <th><%= I18n.t 'description' %></th>
      <% if current_user[:type_id] == 2 %>
        <th><%= I18n.t 'username' %></th>
      <% end %>
      <th></th>
    </tr>
  </thead>
<%
n = 0
@tags.each do |tag|
  n += 1
  %>
  <tr>
    <td><%= n %></td>
    <td>
    <% if tag.budget %>
      <i class="icon-asterisk" title="<%= I18n.t 'included in budget' %>"></i>
    <% end %>
    </td>
    <td><%= link_to tag.name, edit_tag_path(tag) %></td>
    <td><%= tag.description %></td>
    <% if current_user[:type_id] == 2 %>
        <td><%= tag.user.username %></td>
      <% end %>
    <td>
      <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_tag_path(tag), :title => (I18n.t 'edit') %>
      <% times_used = tag.expenses_tags_association.count %>
      <% if times_used == 0 %>
        <%= link_to '<i class="icon-trash"></i>'.html_safe, tag, method: :delete, data: { confirm: (I18n.t 'Are you sure?') }, :title => (I18n.t 'delete') %>
      <% else %>
        <i class="icon-lock" title="<%= I18n.t 'cannot be deleted' %> (<%= I18n.t 'used' %> <%= times_used %> <%= I18n.t 'times' %>)"></i>
      <% end %>
    </td>
  </tr>
<% end %>
</table>


<%= form_for(@tag) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tag.errors.count, "error") %> prohibited this tag from being saved:</h2>

      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, :placeholder => "tag name" %>
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => session[:user][:id] %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, :size => '30x4', :placeholder => "optional tag description goes here" %>
  </div>
  <div class="field">
    <%= f.label :budget, 'class' => "checkbox inline" %>
    <%= f.check_box :budget %>
  </div>
  <div class="actions">
    <%= f.submit :class => 'btn btn-small'%>
  </div>
<% end %>

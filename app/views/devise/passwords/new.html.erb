<% title "Forgot password" %>
<h5><%= I18n.t 'Forgot your password?' %></h5>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal validate' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, (I18n.t 'e-mail'), {:class => 'col-lg-2 control-label'}  %>
    <div class="col-lg-12">
      <%= f.email_field :email, :class => 'form-control validate[required]' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.submit I18n.t("Send me reset password instructions"), :class => 'btn btn-primary btn-small' %>
    </div>
  </div>

<% end %>

<%= render "links" %>
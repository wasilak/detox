<% title "Log in" %>
<h5><%= I18n.t 'Sign in' %></h5>

<%= form_for(resource, :as => resource_name, :html => { :class => 'form-horizontal'}, :url => session_path(resource_name)) do |f| %>
  <div class="control-group">
    <%= f.label :email, (I18n.t 'e-mail') %>
    <%= f.email_field :email %>
  </div>

  <div class="control-group">
    <%= f.label :password, (I18n.t 'password') %>
    <%= f.password_field :password %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group" id="login_checkbox">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, (I18n.t "remember me") %>
    </div>
  <% end -%>

  <div class="control-group">
    <div class="control">
      <%= f.submit (I18n.t "log in") %>
    </div>
  </div>
<% end %>

<%= render "links" %>
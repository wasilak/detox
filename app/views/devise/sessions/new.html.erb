<% title "Log in" %>
<h4 class="center"><%= APP_CONFIG['app_name'] %></h4>

<%= form_for(resource, :as => resource_name, :html => { :class => 'form-horizontal validate', :autocomplete => "off"}, :url => session_path(resource_name)) do |f| %>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.email_field :email, :placeholder => (I18n.t 'e-mail'), :class => 'form-control validate[required, custom[email]]' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.password_field :password, :placeholder => (I18n.t 'password'), :class => 'form-control validate[required]' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-6">
      <%= button_tag(type: 'submit', :class => 'btn btn-block btn-primary') do %>
        <i class="fa fa-lock"></i> <%= (I18n.t "log in") %>
      <% end %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
      <label class="checkbox">
        <%= f.check_box :remember_me %> <%= (I18n.t "remember me") %>
      </label>
  <% end -%>
<% end %>

<%= render "links" %>

<%= form_for @expense, :html => {:class => 'form-horizontal validate'} do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h5><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h5>

      <ul>
      <% @expense.errors.full_messages.each do |msg| %>
        <div class="alert">
          <button type="button" class="close" data-dismiss="alert">×</button>
          <%= content_tag(:div, msg) %>
        </div>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :userId, {:value => current_user[:id]} %>
  
  <div class="control-group">
    <%= f.label :description, (I18n.t 'description'), {:class => 'control-label'} %>
    <div class="controls">
      <%= f.text_field :description, :placeholder => (I18n.t "description"), :class => 'input-xxlarge validate[required]' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :amount, (I18n.t 'value'), {:class => 'control-label'} %>
    <div class="controls">
      <div class="field input-append">
        <%= f.text_field :amount, :placeholder => (I18n.t "value"), :class => 'input-large validate[required]' %>
        <span class="add-on">zł</span>
      </div>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :date, (I18n.t 'expense date'), {:class => 'control-label'} %>
    <div class="controls">
      <%= f.text_field :date, :placeholder => (I18n.t "expense date"), :class => "input-small datepicker validate[required]" %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.label :half, (I18n.t 'half'), 'class' => "checkbox inline" %>
      <%= f.check_box :half %>
    </div>
  </div>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => 'btn btn-small btn-info' %>
    </div>
  </div>
<% end %>

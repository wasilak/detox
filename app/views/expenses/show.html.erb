<% title "Expenses" %>

<p>
  <b>Description:</b>
  <%= @expense.description %>
</p>

<p>
  <b>Amount:</b>
  <%= "%.2f" % @expense.amount %> z≈Ç
</p>

<p>
  <b>Date:</b>
  <%= @expense.date %>
</p>

<p>tags:</p>
<div class="well well-small">
	<% tags = []
      @expense.get_tags.each do |tag| %>
        <% if !tag.tag.nil? %>
          <% tags.push(link_to tag.tag.name, tag.tag, {:target => '_blank'}) %>
        <% end %>
      <% end %>
      <%= tags.to_sentence.html_safe %>
</div>
<p><%= link_to '<i class="icon-chevron-left"></i> all expenses'.html_safe, expenses_path, :title => 'all expenses' %>
<%= link_to '<i class="icon-edit"></i> edit'.html_safe, edit_expense_path(@expense), :title => 'edit' %></p>

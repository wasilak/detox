                layout: 'horizontal',
                labelFormatter: function() {
                  return this.name;
                }
              },
              series: [{
                  type: 'pie',
                  name: 'share',
                  data: <%= @chart_data.to_json.html_safe %>
              }]
          });
          chart2 = new Highcharts.Chart({
              credits: false,
              chart: {
                  renderTo: 'pieChart2',

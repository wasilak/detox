<script type="text/javascript">
  jQuery('#tabs a').click(function (e) {
    e.preventDefault();
    jQuery(this).tab('show');
  })

  jQuery(document).ready(function(){
    jQuery('#budget').change(function(){
      jQuery('#formBudget').submit();
    })
  })
</script>

<script type="text/javascript">
  jQuery(function () {
      var chart;
      jQuery(document).ready(function() {
          chart = new Highcharts.Chart({
              chart: {
                  renderTo: 'pieChart',
                  plotBackgroundColor: null,
                  plotBorderWidth: null,
                  plotShadow: true
              },
              title: {
                  text: 'expenses categories'
              },
              tooltip: {
                pointFormat: '{series.name}: <b>{point.percentage}%</b>',
                percentageDecimals: 1
              },
              plotOptions: {
                  pie: {
                      allowPointSelect: true,
                      cursor: 'pointer',
                      dataLabels: {
                          enabled: true,
                          color: '#000000',
                          connectorColor: '#000000',
                          formatter: function() {
                              return '<b>'+ this.point.name +'</b>: '+ this.y.toFixed(2) +' z≈Ç';
                          }
                      }
                  }
              },
              series: [{
                  type: 'pie',
                  name: 'share',
                  data: <%= @chart_data.to_json.html_safe %>
              }]
          });
      });

});
</script>
<% title "Expenses" %>
<div class="buttonNew">
  <%= link_to '<i class="icon-pencil"></i> '.html_safe+(I18n.t 'new expense'), new_expense_path, :title => 'new', :class => 'btn btn-small' %>
</div>
<%
if session[:budget]
  defaultBudget = session[:budget][:id]
else
  defaultBudget = ''
end
if @budgets.count > 0 %>
  <%= form_tag setBudget_path, :method => 'POST', :class => 'form-inline', :id => 'formBudget' do %>
    <% options = options_for_select(
      [["all expenses","all"]] +
        @budgets.collect {
          |budget| ["#{budget.description} (#{budget.dateStart} - #{budget.dateEnd}) - #{number_to_currency budget.amount}", budget.id]
        },
        defaultBudget
        ) %>
    <%= select_tag :budget, options, :class => 'input-xxlarge' %>
  <% end %>
<% end %>

<div id="tabs">
  <ul class="nav nav-tabs">
    <li><a href="#tabular" data-toggle="tab"><%= I18n.t 'table' %></a></li>
    <li><a href="#charts" data-toggle="tab"><%= I18n.t 'charts' %></a></li>
  </ul>
</div>

<div class="tab-content">
  <div class="tab-pane active" id="tabular">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th><%= I18n.t 'id' %></th>
          <th></th>
          <th><%= I18n.t 'description' %></th>
          <th class="amount"><%= I18n.t 'value' %></th>
          <th><%= I18n.t 'expense date' %></th>
          <th><%= I18n.t 'tags' %></th>
          <th></th>
        </tr>
      </thead>
    <% if @budgetsSum > 0 %>
      <tr class="info">
        <td></td>
        <td></td>
        <td><%= I18n.t 'sum' %></td>
        <td class="amount"><%= number_to_currency @budgetsSum %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% end %>
    <%
    sum = 0;
    id = 0;
    @expenses.each do |expense|
      sum += expense.amount
      id += 1
      %>
      <%
      tags = []
      budgetIncluded = false
      expense.expenses_tags_association.each do |tag_id|
        if tag_id.tag.budget
          budgetIncluded = true
        end
        tags.push(link_to tag_id.tag.name, tag_id.tag, {:target => '_blank'}) %>
      <% end %>
      <tr>
        <td><%= id %></td>
        <td>
          <% if budgetIncluded %>
            <i class="icon-asterisk" title="<%= I18n.t 'included in budget' %>"></i></td>
          <% end %>
        <td><%= link_to expense.description, edit_expense_path(expense) %></td>
        <td class="amount"><%= number_to_currency expense.amount %></td>
        <td><%= expense.date %></td>
        <td>
          <%= tags.to_sentence.html_safe %>
        </td>
        <td>
          <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_expense_path(expense), :title => (I18n.t 'edit') %>
          <%= link_to '<i class="icon-trash"></i>'.html_safe, expense, method: :delete, data: { confirm: (I18n.t 'Are you sure?') }, :title => (I18n.t 'delete') %>
        </td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="tab-pane" id="charts">
    <div id="pieChart"></div>
  </div>
</div>